<div class="mb-2 ml-4">
  <p> <strong class="font-bold">Product:</strong> <%= item.product.name %></p>
  <div class='flex justify-between max-w-sm'>
    <p class="flex flex-row justify-start"> <strong class="font-bold">Quantity:</strong> <%= item.quantity %></p>
    <div class="flex fles-flex-row justify-end inline-flex">
      <%= button_to "+", increment_item_quantity_path(item.id), method: :post, class: 'bg-blue-300 hover:bg-blue-400 text-blue-800 font-bold p-2 rounded-l' %>
      <%= button_to "-", decrement_item_quantity_path(item.id), method: :post, class: 'bg-blue-300 hover:bg-blue-400 text-blue-800 font-bold p-2 rounded-r' %>
    </div>
  </div>
  <%= button_to "Delete Item from cart", remove_cart_items_path(item.id), method: :post, class: 'text-blue-500 hover:text-blue-800 mt-2 mb-4' %>
</div>