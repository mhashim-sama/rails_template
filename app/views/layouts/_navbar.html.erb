<nav class="flex justify-between my-6">

  <ul class="flex flex-row justify-start">
    <li class="ml-6">
      <%= link_to 'Products', products_path, class: 'text-blue-500 hover:text-blue-800' %>
    </li>

    <% if user_signed_in? %>
      <li class="ml-6">
        <%= link_to "Shopping Cart (#{current_user.shopping_cart.total_items})", shopping_cart_items_path, class: 'text-blue-500 hover:text-blue-800' %>
      </li>
    <% end %>
  </ul>

  <ul class="flex flex-row justify-end">
    <% unless user_signed_in? %>
      <li class="mr-6">
        <%= link_to 'Sign Up', new_user_registration_path, class: 'text-blue-500 hover:text-blue-800' %>
      </li>

      <li class="mr-6">
        <%= link_to 'Log In', new_user_session_path, class: 'text-blue-500 hover:text-blue-800' %>
      </li>
    <% else %>
      <li class="mr-6">
        <%= button_to 'Sign-Out', destroy_user_session_path, method: 'delete', class: 'text-blue-500 hover:text-blue-800' %>
      </li>
    <% end %>
  </ul>
</nav>